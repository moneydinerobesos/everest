$kernel /boot/kernel
/boot/kernel
/boot/initramfs
/lib/modules
$dir /lib/modules/$KERNEL_VERSION
$package kmod
$require baselayout.lst
$package coreutils
$package sysvinit
$require netifrc.lst
$package grep
$package procps
$package findutils
$require udev.lst
$package timezone-data

$package net-tools
$require bash-minimal.lst
$require pam.lst
$require psmisc.lst
$require xfsprogs.lst
$require nvi-minimal.lst
$package iputils
$require dhcpcd.lst
$require openssh.lst
$require cron.lst
$package file
$package sysklogd

/bin/tar
/bin/gzip

$write /etc/resolv.conf "nameserver 8.8.8.8\nnameserver 8.8.4.4"
$require avahi.lst
$require nmbd.lst
$package dev-libs/openssl
$package app-misc/ca-certificates

/tmp
/var/tmp
/root
/sys
/proc
/run
/var/run
/mnt

$require glibc-minimal.lst
/etc/ld.so.conf

$dir /dev

$write /etc/conf.d/localmount 'no_umounts="/.overlay/boot|/.overlay/rw"'
$sed /etc/init.d/mount-ro 's/do_unmount "umount -r"/do_unmount "mount -o remount,ro"/'

/usr/bin/rsync

$write /etc/fstab 'overlay\t/\toverlay\tdefaults\t0 0\n'
$sed /etc/shadow 's/^root:\*:/root::/' # Empty root password
$symlink /etc/init.d/net.eth0 net.lo
$symlink /etc/runlevels/default/net.eth0 /etc/init.d/net.eth0

$write /etc/resolv.conf 'search local\nnameserver 8.8.8.8\nnameserver 8.8.4.4'
