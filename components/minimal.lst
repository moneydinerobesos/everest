$kernel /boot/kernel
/boot/kernel
/boot/initramfs
$dir /lib/firmware
$require baselayout.lst
$package coreutils
$package sysvinit
$require netifrc.lst
$package grep
$package kmod
$package procps
$package findutils
$require udev.lst

$package net-tools
$require kbd-minimal.lst

$require bash-minimal.lst
$require pam.lst
$require psmisc.lst
$require grub-i386-pc.lst
$require xfsprogs.lst
$require nvi-minimal.lst
$package iputils
$require dhcpcd.lst

$require zram-init.lst

$require openssh.lst
/bin/ip
/usr/bin/awk
$copy resource/walbrix/adhoc-sshd /usr/sbin/

/tmp
/root
/sys
/proc
/run

$require glibc-minimal.lst
/etc/ld.so.conf

$dir /dev
$dir /lib/modules/$KERNEL_VERSION
$copy resource/walbrix/grub.cfg /boot/grub/grub.cfg

$write /etc/conf.d/localmount 'no_umounts="/.overlay/boot|/.overlay/rw"'
$sed /etc/init.d/mount-ro 's/do_unmount "umount -r"/do_unmount "mount -o remount,ro"/'

/bin/sed
/usr/sbin/lspci
/usr/share/misc/pci.ids.gz
/usr/share/misc/usb.ids.gz

/usr/bin/rsync
$copy resource/walbrix/save /sbin/save

$sed /boot/grub/grub.cfg "s/__VERSION__/$WALBRIX_VERSION/g"

$write /etc/fstab 'overlay\t/\toverlay\tdefaults\t0 0\n'
$sed /etc/shadow 's/^root:\*:/root::/' # Empty root password

$copy resource/walbrix/net /etc/conf.d/

$symlink /etc/init.d/net.eth0 net.lo
$symlink /etc/runlevels/default/net.eth0 /etc/init.d/net.eth0

$require wpa_supplicant.lst
$symlink /etc/init.d/net.wlan0 net.lo
$copy resource/walbrix/setup-wifi /usr/sbin/

$require ppp.lst
$copy resource/walbrix/find-modem /usr/sbin/
