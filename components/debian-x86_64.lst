$debootstrap jessie --include="openssh-server,avahi-daemon,samba,ntp,openvpn,ca-certificates,linux-image-amd64"
$mkdir /boot/grub
$write /boot/grub/grub.cfg "set default=0\nset timeout=1\n\nmenuentry 'Linux' {\n\techo 'Loading kernel ...'\n\tlinux /vmlinuz root=/dev/xvda1 console=hvc0\n\tinitrd /initrd.img\n}"