/boot/kernel-genkernel-x86_64-3.16.51
$symlink /boot/kernel.domU kernel-genkernel-x86_64-3.16.51

# 32-bit compat
$require lib32.lst

$package dev-vcs/git

# to self-build walbrix
$require python-magic.lst
$package dev-python/chardet
$package sys-fs/squashfs-tools
$package dev-util/scons
$package dev-libs/libisoburn  # for /usr/bin/xorriso
$require debootstrap.lst
$require yum.lst

# zfs
/sbin/splat
$package sys-fs/zfs
$write /tmp/README 'http://insights.ubuntu.com/2016/02/18/zfs-licensing-and-linux/'
$exec 'if [ -d /lib/modules/*/extra/zfs ]; then mv /tmp/README /lib/modules/*/extra/zfs/; fi'

# non-free
$exec --overlay "tar zcvf - -C /lib/modules/$(KERNEL_VERSION)/video . | openssl enc -blowfish -k 'I agree to the end user license agreement' > /tmp/nvidia.tar.gz.blowfish && mv /tmp/nvidia.tar.gz.blowfish /lib/modules/$(KERNEL_VERSION)/video/"
# To decrypt:
# openssl blowfish -d < nvidia.tar.gz.blowfish | tar zxvf -

# misc
/usr/bin/mpg123
/usr/lib64/mpg123/output_alsa.so
/usr/sbin/usbip
/usr/sbin/usbipd
$copy usbip/usbipd.init /etc/init.d/usbipd
$copy usbip/usbipd.conf /etc/conf.d/usbipd
$copy usbip/usbip.init /etc/init.d/usbip
$copy usbip/usbip.conf /etc/conf.d/usbip

