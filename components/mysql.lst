$require perl.lst # for mysql_install_db
$package dev-db/mysql-connector-c # for my_print_defaults needed by mysql_install_db

#dev-libs/libaio
#dev-libs/protobuf
#app-arch/libarchive
#app-arch/lz4
$package dev-db/mysql --exclude='/var/run/'
$sed /etc/mysql/my.cnf 's/^log-bin$/#log-bin/'  # disable binary log

/usr/include/mysql/mysql_version.h
/usr/include/mysql/my_config.h

$package dev-db/mysql-init-scripts
$symlink /etc/runlevels/default/mysql /etc/init.d/mysql

$mkdir /var/log/mysql
$exec "chown -R mysql.mysql /var/log/mysql"
$copy mysql/operate.sh /operate.sh
$exec "/operate.sh initdb && rm /operate.sh"
