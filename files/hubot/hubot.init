#!/sbin/runscript
PIDFILE=/var/run/${SVCNAME}.pid

depend() {
	use dns net
}

start() {
	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --quiet --make-pidfile -b --exec ${HUBOT_DIR}/bin/hubot -d "${HUBOT_DIR}" \
		--user hubot --pidfile "${PIDFILE}" -- ${HUBOT_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon --stop --quiet --pidfile "${PIDFILE}"
	eend $?
}
